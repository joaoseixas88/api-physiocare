{
	"extends": "./tsconfig.paths.json",
	"compilerOptions": {
		"preserveConstEnums": true,
		"strict": true,
		"sourceMap": true,
		"allowJs": true,
		"target": "es5",
		"outDir": ".build",
		"moduleResolution": "node",
		"lib": [
			"es2015"
		],
		"rootDir": "./",
		"esModuleInterop": true,
		"skipLibCheck": true
	},	
		"ts-node": {
			"require": ["tsconfig-paths/register"]
		
	}
}